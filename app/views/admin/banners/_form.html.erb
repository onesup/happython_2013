<%= form_for([:admin, @banner]) do |f| %>
  <% if @banner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@banner.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @banner.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row-fluid">
  <!-- block -->
  <div class="block">
      <div class="navbar navbar-inner block-header">
        <% if @banner.title.nil? %>
          <div class="muted pull-left">배너 만들기</div>
        <% else %>
          <div class="muted pull-left">배너 "<%= @banner.title %>" 수정</div>
        <% end%>
      </div>
      <div class="block-content collapse in">
          <div class="span12">
               <form class="form-horizontal">
                <fieldset>
                  
                  <div class="control-group">
                    <label class="control-label" for="focusedInput">제목</label>
                    <div class="controls">
                      <%= f.text_field :title, id: "focusdInput", class: "input-xlarge focused" %>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">내용</label>
                    <div class="controls">
                      <%= f.text_area :contents, id: "focusdInput", class: "input-xlarge focused", style: "width: 600px; height: 200px" %>
                      <span class="help-inline">HTML 사용 가능.</span>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">배너 이미지</label>
                    <div>
                      <%= image_tag @banner.banner_image unless @banner.banner_image.nil? %>
                    </div>
                    <div class="controls">
                      <div class="uploader hover" id="uniform-fileInput">
                        <%= f.file_field :banner_image %>
                      </div>
                      <span class="help-inline">메인페이지 표시.</span>
                    </div>
                  </div>

                  <div class="form-actions">
                    <%= f.submit class: "btn btn-primary"  %>
                    <%= link_to "취소", admin_path, class: "btn"%>
                  </div>
                </fieldset>
              </form>

          </div>
      </div>
  </div>
  <!-- /block -->
</div>  
  
<% end %>
