<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">공지사항 전체 목록</div>
    </div>
    <div class="block-content collapse in">
        <div class="span12">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
            <thead>
              <tr>
                <th>#</th>
                <th>제목</th>
                <th>등록일</th>
                <th>관리</th>
              </tr>
            </thead>
            <tbody>
              <% @notices.each do |notice| %>
                <tr class="">
                  <td><%= notice.id %></td>
                  <td><%= notice.title %></td>
                  <td class="center"><%= notice.created_at %></td>
                  <td class="center">
                    <%= link_to "상세정보", admin_notice_path(notice) %>
                    <%= link_to "수정", edit_admin_notice_path(notice) %>
                    <%= link_to "삭제", admin_notice_path(notice), method: :delete, confirm: "삭제 OK?" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to "공지사항 등록", new_admin_notice_path, class: "btn btn-primary"%>
    </div>
  </div>
  <!-- /block -->
</div>