<%= simple_form_for([:admin, @answer]) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">FAQ "질문이 뭔가요?" 수정</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
          <fieldset>
            <div class="control-group">
              <label class="control-label" for="focusedInput">질문</label>
              <div class="controls">
                <%= f.text_field :title, id: "focusdInput", class: "input-xlarge focused" %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">내용</label>
              <div class="controls">
                <%= f.text_area :contents, class: "input-xlarge focused", style: "width: 600px; height: 200px" %>
                <span class="help-inline">HTML 사용 가능.</span>
              </div>
            </div>
            <div class="form-actions">
              <%= f.submit class: "btn btn-primary"  %>
              <%= link_to "취소", admin_path, class: "btn"%>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
<% end %>
