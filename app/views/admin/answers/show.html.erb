<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">FAQ "<%= @answer.title %>" 정보 보기</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                 <form class="form-horizontal">
                  <fieldset>

                    <div class="control-group">
                      <label class="control-label" for="focusedInput">제목</label>
                      <div class="controls">
                        <span class="input-xlarge uneditable-input"><%= @answer.title%></span>
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">내용</label>
                      <div class="controls">
                        <span class="input-xlarge uneditable-input"><%= @answer.contents%></span>
                      </div>
                    </div>

                    <div class="control-group">
                      <label class="control-label">등록일시</label>
                      <div class="controls">
                        <span class=""><%= @answer.created_at %></span>
                      </div>
                    </div>
                    <div class="form-actions">
                      <%= link_to "목록으로", admin_answers_path, class: "btn"%>
                      <%= link_to "수정", edit_admin_answer_path(@answer), class: "btn btn-primary"%>
                    </div>
                  </fieldset>
                </form>

            </div>
        </div>
    </div>
    <!-- /block -->
</div>