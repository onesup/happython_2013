 <div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
        <div class="muted pull-left">후기 전체 목록</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th>#</th>
              <th>제목</th>
              <th>등록일</th>
              <th>관리</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr class="">
                <td><%= review.id %></td>
                <td><%= review.title %></td>
                <td class="center"><%= review.created_at %></td>
                <td class="center">
                  <%= link_to "상세정보", admin_review_path(review) %>
                  <%= link_to "수정", edit_admin_review_path(review) %>
                  <%= link_to "삭제", admin_review_path(review), method: :delete, confirm: "삭제 OK?" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to "새 리뷰 등록", new_admin_review_path, class: "btn btn-primary"%>
    </div>
  </div>
  <!-- /block -->
</div>