<%= form_for([:admin, @user]) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :avatar, "본인사진" %>
    <p>
    <%= image_tag @user.avatar %>
  </p>
    <%= f.file_field :avatar %>
  </div>
  <div>
    <%= f.label :farm, "농장사진" %>
    <p>
      <%= image_tag @user.farm %>
    </p>
    <%= f.file_field :farm %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
