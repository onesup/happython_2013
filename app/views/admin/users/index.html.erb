 <div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">전체 회원 목록</div>
        </div>
        <div class="block-content collapse in">
          <div class="span12">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
              <thead>
                <tr>
                  <th>#</th>
                  <th>이름</th>
                  <th>이메일</th>
                  <th>연락처</th>
                  <th>가입일</th>
                  <th>관리</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                <tr class="">
                  <td><%= user.id %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %><span class="badge"><%= user.role.name unless user.role.nil?%></span></td>
                  <td class="center"><%= user.phone %></td>
                  <td class="center"><%= user.created_at %></td>
                  <td class="center">
                    <%= link_to "수정", edit_admin_user_path(user) %>
                    <%= link_to "삭제", admin_user_path(user), method: :delete, confirm: "삭제 OK?" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <%= link_to "새 회원 등록", new_admin_user_path, class: "btn btn-primary"%>
      </div>
    </div>
    <!-- /block -->
</div>