<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Q&A "<%= @question.title %>" 정보 보기</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                 <form class="form-horizontal">
                  <fieldset>

                    <div class="control-group">
                      <label class="control-label" for="focusedInput">질문</label>
                      <div class="controls">
                        <span class="input-xlarge uneditable-input"><%= @question.title%></span>
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">질문내용</label>
                      <div class="controls">
                        <span class="input-xlarge uneditable-input"><%= @question.contents%></span>
                      </div>
                    </div>

                    <div class="control-group">
                      <label class="control-label">등록일시</label>
                      <div class="controls">
                        <span class=""><%= @question.created_at %></span>
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">제보자 이메일</label>
                      <div class="controls">
                        <span class="">
                          <% unless @question.email.nil? %>
                            <%= link_to(@question.email, "mailto:#{@question.email}") unless @question.email.nil? %>
                          <% else %>
                            이메일 미등록
                          <% end %>
                        </span>
                      </div>
                    </div>

                    <div class="form-actions">
                      <%= link_to "목록으로", admin_questions_path, class: "btn"%>
                      <%= link_to "수정", edit_admin_question_path(@question), class: "btn btn-primary"%>
                    </div>
                  </fieldset>
                </form>

            </div>
        </div>
    </div>
    <!-- /block -->
</div>